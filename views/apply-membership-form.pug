extends layout

block content
 
  h1 #{title}
 
  form(method='POST' action='')
    div.form-group
      label(for='member') Membership Code ? :
      input#member.form-control(type='text', placeholder='code?' name='member' required='true' )
 
    button.btn.btn-primary(type='submit') Submit
 
  if errors
    ul
      for error in errors
        li!= error.msg